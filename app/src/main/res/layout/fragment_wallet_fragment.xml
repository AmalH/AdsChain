<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context="amalhichri.androidprojects.com.adschain.fragments.WalletFragment">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="Today"
      android:textSize="28dp"/>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="25dp"
      android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:text=" AfriCoins"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" SMS"/>
  </LinearLayout>
  <WebView
      android:id="@+id/chartWebView"
      android:layout_width="match_parent"
      android:layout_height="230dp"
      android:layout_marginTop="25dp">
  </WebView>
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20dp">
    <View
        android:id="@+id/seprtr"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_color_1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
    <TextView
        android:id="@+id/africoinsTxt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/seprtr"
      android:text="Africoins"
      android:layout_marginLeft="10dp"
      android:textSize="20dp"/>
    <TextView
        android:id="@+id/idTxt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/africoinsTxt"
        android:layout_centerVertical="true"
      android:layout_marginLeft="10dp"
      android:text="Your ID"
      android:textSize="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTxt"
        android:layout_marginLeft="10dp"
        android:text="0x123asFD25s22a3SA3A563ss3asaAS63sAQ3"
        android:textSize="14dp"/>
    </LinearLayout>
  </RelativeLayout>


</LinearLayout>
