<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/loginHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Follow up with AdChainers"
        android:textColor="@color/base_color_1"
        android:gravity="center"
        fontPath="fonts/graublau_slab.ttf"
        android:textSize="40dp"
        style="bold"
        tools:ignore="MissingPrefix" />

    <!-- form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_centerVertical="true">

        <com.rey.material.widget.EditText
            android:id="@+id/emailLoginTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" E-mail"
            android:layout_marginTop="50px"
            android:paddingLeft="20dp"
            app:et_dividerColor="@android:color/transparent"
            app:et_dividerErrorColor="@android:color/transparent"
            app:et_labelEnable="true"
            app:et_labelTextColor="@color/base_color_1"
            app:et_labelTextSize="15dp"
            android:background="@drawable/editextborder"/>

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/pswLoginTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="50px"
            android:paddingLeft="20dp"
            app:et_dividerColor="@android:color/transparent"
            app:et_dividerErrorColor="@android:color/transparent"
            app:et_labelEnable="true"
            app:et_labelTextColor="@color/base_color_1"
            app:et_labelTextSize="15dp"
            android:background="@drawable/editextborder"/>
        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/twoFauthMethLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ael_expanded="true"
            app:ael_duration="500"
            app:ael_orientation="vertical" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:text="You enabled two-factor authentication for this account."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:text="Please choose a security method:"/>
                <RadioGroup
                    android:id="@+id/twoFauthMethGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <RadioButton
                        android:id="@+id/viaSMSChkBx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text Message"
                        android:textColor="@color/base_color_1"
                        android:buttonTint="@color/base_color_1"
                        style="@android:style/Widget.Material.CompoundButton.CheckBox"/>
                    <RadioButton
                        android:id="@+id/viaGglAuh1ChkBx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_1"
                        android:buttonTint="@color/base_color_1"
                        android:text="Authentication app on this phone"
                        style="@android:style/Widget.Material.CompoundButton.CheckBox"/>
                    <RadioButton
                        android:id="@+id/viaGglAuh2ChkBx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_1"
                        android:buttonTint="@color/base_color_1"
                        android:text="Authentication app on another phone "
                        style="@android:style/Widget.Material.CompoundButton.CheckBox"/>
                </RadioGroup>
            </LinearLayout>


        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

        <com.rey.material.widget.Button
            android:id="@+id/confirmLogin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="20dp"
            android:background="@color/base_color_2"
            android:onClick="login"
            android:text="Log in"
            fontPath="fonts/graublau_slab.ttf"
            android:textColor="@color/base_color_1"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recoverTxtVw"
            style="bold"
            fontPath="fonts/graublau_slab.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:onClick="resetPassword"
            android:text="Forgot password?"
            android:textColor="@color/base_color_1"
            android:textSize="8pt"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/signUpTxtVw"
            style="bold"
            fontPath="fonts/graublau_slab_bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="Not a Chainer yet ? Join now."
            android:textColor="@color/base_color_1"
            android:textSize="8pt"
            android:textStyle="bold"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- social media btns -->
        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebookLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in with Facebook"
            android:visibility="gone"/>
        <com.rey.material.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3B5998"
            android:drawableLeft="@drawable/ic_facebook_login"
            android:paddingLeft="10dp"
            android:text="Login with Facebook"
            android:textColor="#FFFFFF"
            android:onClick="loginWithFacebook"
            />
    </LinearLayout>



</RelativeLayout>