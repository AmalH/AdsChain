<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/base_color_1</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
    </style>

    <!-- Settings activity theme . -->
    <style name="SettingsTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SettingsActionBar</item>
    </style>
    <style name="SettingsActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#3b5670</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>


    <!-- facebook login button style -->
    <style name="FacebookLoginButton">
        <item name="android:height">100px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">Continue with Facebook ddd</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">#007bb6</item>
    </style>


    <!-- 2FA Dialogs -->
    <style name="TwoFADialogs" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/TwoFADialogsAnimation</item>
    </style>

    <style name="TwoFADialogsAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_left_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_side</item>
    </style>


</resources>
